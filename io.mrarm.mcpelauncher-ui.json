{
    "id": "io.mrarm.mcpelauncher-ui",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "mcpelauncher-ui-qt",
    "build-options" : {
        "cflags": "-O2 -g -DNDEBUG",
        "cxxflags": "-O2 -g -DNDEBUG"
    },
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--filesystem=host",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak"
     ],
    "modules": [
        {
            "name": "protobuf",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "branch": "3.12.x"
                }
            ]
        },
        {
            "name": "libzip",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nih-at/libzip.git",
                    "branch": "master"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "libuv",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libuv/libuv.git",
                    "branch": "v1.x"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "mcpelauncher-ui",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/minecraft-linux/mcpelauncher-ui-manifest.git",
                    "branch": "ng"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/minecraft-linux/mcpelauncher-proprietary.git",
                    "branch": "master"
                }
            ],
            "name": "compat",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin/",
                "echo '#!/bin/bash' > /app/bin/mcpelauncher-client",
                "echo 'flatpak-spawn --host flatpak --filesystem=~/.var/app/$FLATPAK_ID:ro run app/io.mrarm.mcpelauncher-client// \"$@\"' >> /app/bin/mcpelauncher-client",
                "chmod +x /app/bin/mcpelauncher-client",
                "cd /app/share/applications && mv mcpelauncher-ui-qt.desktop io.mrarm.mcpelauncher-ui.desktop && sed -i 's/Icon=mcpelauncher-ui-qt/Icon=io.mrarm.mcpelauncher-ui/g' io.mrarm.mcpelauncher-ui.desktop",
                "install -Dm644 mcpelauncher-icon.svg /app/share/icons/hicolor/scalable/apps/io.mrarm.mcpelauncher-ui.svg"
            ]
        },
        {
            "name": "32bit-x86_64",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin/",
                "echo '#!/bin/bash' > /app/bin/mcpelauncher-client32",
                "echo 'flatpak-spawn --host flatpak --filesystem=~/.var/app/$FLATPAK_ID:ro run app/io.mrarm.mcpelauncher-client/i386/ \"$@\"' >> /app/bin/mcpelauncher-client32",
                "chmod +x /app/bin/mcpelauncher-client32"
            ],
            "only-arches": [ "x86_64" ]
        },
        {
            "name": "32bit-aarch64",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin/",
                "echo '#!/bin/bash' > /app/bin/mcpelauncher-client32",
                "echo 'flatpak-spawn --host flatpak --filesystem=~/.var/app/$FLATPAK_ID:ro run app/io.mrarm.mcpelauncher-client/arm/ \"$@\"' >> /app/bin/mcpelauncher-client32",
                "chmod +x /app/bin/mcpelauncher-client32"
            ],
            "only-arches": [ "aarch64" ]
        }
    ]
}